@model CompanyModel

@{
    ViewData["Title"] = "Index";
}

<h1>Company management</h1>

<h2>Add new company</h2>

<div id="success-alert" style="display:none" class="alert alert-success">Item added successfully</div>
@using (Html.BeginForm())
{
    <div class="form-group"></div>
    @Html.LabelFor(x => x.Name, "Company name")
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })

    <div class="form-group">
        @Html.LabelFor(x => x.Description, "Company description")
        @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })

    </div>
    <div class="form-group form-check">
        @Html.CheckBoxFor(x => x.IsVisible, new { @class = "form-check-input" })
        @Html.LabelFor(x => x.IsVisible, "Visible?", new { @class = "form-check-label" })

    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add company</button>
    </div>
}

@section Scripts {
    <script src="~/js/addNewItem.js"></script>

}
